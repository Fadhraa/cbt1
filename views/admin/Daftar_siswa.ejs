<div class="container-fluid">

    <h3>Halaman Daftar Siswa</h3>
    <h5>Berikut daftar siswa:</h5>
    <div class="utils">
        
        <button type="button" class=" btn-primary" id="Tambah_siswa" data-bs-toggle="modal" data-bs-target="#exampleModal">Tambah Siswa</button>



        <!-- Modals tambah siswa -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Data Siswa</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form method="post" action="/admin/Daftar_Siswa">
                    <div class="mb-3">
                      <label for="nama" class="col-form-label">Nama:</label>
                      <input type="text" class="form-control" id="nama" name="nama">
                    </div>

                    <div class="mb-3">
                        <label for="role" class="col-form-label">Tingkat:</label>
                        <select id="tingkat" name="tingkat" class="form-control" onchange="updateKelas()">
                          <option value="">Pilih Tingkat</option>
                          <option value="10">10</option>
                          <option value="11">11</option>
                          <option value="12">12</option>
                        </select>
                      </div>
                  
                      <div class="mb-3">
                        <label for="role" class="col-form-label">Kelas:</label>
                        <select id="kelas" name="kelas" class="form-control" required>
                          <option value="">Pilih Kelas</option>
                        </select>
                      </div>
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      <button type="submit" class="btn btn-primary">Input Data</button>
                  </form>
                </div>
              </div>
            </div>

    </div>
    <!-- Tabel Daftar Siswa -->
     <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th style="text-align: center;">#</th>
                    <th>Nama</th>
                    <th>Status Login</th> <!-- Menampilkan status login -->
                </tr>
            </thead>
            <tbody>
                <!-- Loop untuk menampilkan data siswa -->
                <% siswa.forEach(function(siswa, index) { %>
                    
                    <tr>
                        <td style="text-align: center;"><%-index+ 1%></td>
                        <td><%= siswa.nama %></td> <!-- Menampilkan username siswa -->
                        <% if (siswa.status === 'Online'){%>
                            <td class="table-success"><%= siswa.status %></td>
                        <%}else{%>
                            <td class="table-danger"><%= siswa.status %></td>
                            <%}%>
                           <!-- Menampilkan status login -->
                    </tr>
                <% }); %>
            </tbody>
        </table>
     </div>
    
    <a href="/logout" class="logout-link">Log out</a>
</div>

<script src="/js/admin/script.js"></script>